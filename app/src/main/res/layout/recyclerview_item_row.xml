<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tree"
        android:layout_width="300dp"
        android:layout_height="91dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/left_leave_new" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:text="Blackberry"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tree"
        app:layout_constraintTop_toTopOf="@+id/tree" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:text="Hot Pepper"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/tree"
        app:layout_constraintTop_toTopOf="@+id/tree" />
</android.support.constraint.ConstraintLayout>